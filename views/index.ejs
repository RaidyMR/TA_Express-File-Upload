<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Node.js Simple File Upload</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    <style>
        input.btn {
            flex: 0.8;
        }

        button.btn {
            flex: 0.15;
        }
    </style>
</head>

<body>
    <div class="container d-flex" style="height: 100vh;">
        <div class="card my-auto mx-auto w-50">
            <div class="card-body">
                <form action="/upload" method="post" enctype="multipart/form-data" id="uploadForm">
                    <label for="formFile" class="form-label">Default file input example</label>
                    <input type="file" name="image" class="form-control" id="formFile" multiple />
                    <div class="d-md-flex justify-content-md-between mt-2">
                    <!-- </input> -->
                    <input class="btn btn-primary" type="submit" onclick="uploadFile()" style="border-radius: 4px">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
    <script type="text/javascript">
        document.getElementById("file").value = "";

        function uploadFile() {
            var formData = new FormData($('#uploadForm')[0]);

            $.ajax({
                url: '/upload',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {
                    // Tampilkan respons dari API ke dalam elemen dengan ID "response"
                    $('#response').text(data);
                },
                error: function (error) {
                    // Handle error
                    console.log(error);
                    $('#response').text('Error uploading file.');
                }
            });
        }


    </script>
</body>

</html>